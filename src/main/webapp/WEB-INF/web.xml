<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>Airline Booking System</display-name>

    <!-- FlightSearchServlet -->
    <servlet>
        <servlet-name>FlightSearchServlet</servlet-name>
        <servlet-class>com.airlinebooking.servlet.FlightSearchServlet</servlet-class>
    </servlet>

    <!-- FlightDetailsServlet -->
    <servlet>
        <servlet-name>FlightDetailsServlet</servlet-name>
        <servlet-class>com.airlinebooking.servlet.FlightDetailsServlet</servlet-class>
    </servlet>

    <!-- BookingServlet -->
    <servlet>
        <servlet-name>BookingServlet</servlet-name>
        <servlet-class>com.airlinebooking.servlet.BookingServlet</servlet-class>
    </servlet>

    <!-- ConfirmationServlet -->
    <servlet>
        <servlet-name>ConfirmationServlet</servlet-name>
        <servlet-class>com.airlinebooking.servlet.ConfirmationServlet</servlet-class>
    </servlet>

    <!-- Welcome file -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>

</web-app>
